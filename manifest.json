{
  "manifest_version": 3,
  "name": "YouTube Minimalist",
  "version": "2.0",
  "description": "Remove video details from YouTube thumbnails on the homepage.",
  "permissions": ["activeTab"],
  "icons": {
    "48": "48icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16icon.png",
      "48": "48icon.png",
      "128": "128icon.png"
    },
    "default_title": "YouTube Minimalist"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ], 
  "host_permissions": [
    "https://*.youtube.com/*"
  ]
}
